{
  "name": "ceremonia",
  "version": "v1.0.0",
  "license": "MIT",
  "main": "dist-electron/index.js",
  "author": {
    "name": "Kevin Kelche",
    "email": "mail@kelche.co"
  },
  "description": "Run Distributed Key Generation Locally.",
  "keywords": [
    "ssv network",
    "ssv"
  ],
  "repository": {
    "url": "https://github.com/kelcheone/ceremonia"
  },
  "productName": "Ceremonia",
  "scripts": {
    "dev": "vite",
    "dev:electron": "yarn run build:electron && electron .",
    "build": "yarn run build:vite && yarn run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "yarn run build && electron-builder",
    "dist:win": "yarn run build && electron-builder --win",
    "dist:mac": "yarn run build && electron-builder --mac",
    "dist:linux": "yarn run build && electron-builder --linux",
    "pack": "yarn run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@material-tailwind/react": "^2.1.9",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@vitejs/plugin-react": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.438.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.3.0",
    "react-intersection-observer": "^9.13.0",
    "react-router-dom": "^6.26.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^2.8.6",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.4",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "^8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^5.5.4"
  },
  "build": {
    "asar": true,
    "files": [
      "dist-electron",
      "dist-vite"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraFiles": [
      {
        "from": "bin/",
        "to": "resources/bin/"
      }
    ],
    "appId": "com.ceremonia.app",
    "productName": "Ceremonia",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon":"src/assets/icons/icon.png" 
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon":"src/assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "extraResources": [
        {
          "filter": [
            "**/*"
          ],
          "from": "bin",
          "to": "bin"
        }
      ],
      "icon":"src/assets/icons/icon.ico"
    } 
  }
}